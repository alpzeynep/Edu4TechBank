
@{
    ViewData["Title"] = "GİRİŞ YAPINIZ";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
<form asp-controller="Account" asp-controller="Register" method="post" >
<div class="form sign-in">
    <h2>Hoşgeldiniz</h2>
        <div class="row">
            @Html.ValidationSummary(false, "", new { @style = "color:blue" })
            <div asp-validation-summary="ModelOnly" style="color:blue" ;> </div>
            <div asp-validation-summary="All" style="color:red" ;> </div>
        </div>

    <label>
        <span>Email</span>
            <input type="email" name="emailorUsername" />
    </label>
    <label>
        <span>Password</span>
        <input type="password" name="password" />
    </label>
    <p class="forgot-pass"><a href="#">Sifremi Unuttum</a></p>
    <button type="submit" class="submit">Giris Yapınız</button>

</div>
<div class="sub-cont">
    <div class="img">
        <div class="img__text m--up">

            <h3>HESABINIZ YOK MU ? GELİN ACALIM!</h3>
        </div>
        <div class="img__text m--in">
            <h3>HESABINIZ VARSA GİRİS YAPINIZ!</h3>
        </div>
        <div class="img__btn">
            <span class="m--up">Kayıt olunuz</span>
            <span class="m--in">Giris Yapınız</span>
        </div>
    </div>

</div>
</form>
